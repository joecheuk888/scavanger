<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:cal="http://www.caliburnproject.org"
             x:Class="Bootcamp2016.AmazingRace.Views.TeamView">
  <StackLayout>
    <Label x:Name="Name" Text="Welcome !" VerticalOptions="Top" HorizontalOptions="Center" />

    <Lablel Text="Complete your registration by providing your team code"/>
    <Entry  Placeholder="Enter Team Code" Text="{Binding TeamCode}" />

    <Button Content="Join" Command="{Binding JoinCommand}">
    </Button>
  </StackLayout>




</ContentPage>